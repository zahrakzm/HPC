# Compiler
CC = mpicc

# Compiler flags
CFLAGS = -g -fopenmp -O3 -std=c++11
LDFLAGS = -lstdc++ -lm -lgcc_s -lgcc -lstdc++ -lpthread -lc -lgcc_s -lgcc

# Source file
SRC = MPI_Mandelbrot.cpp

# Executable name
EXEC = mpi_mandelbrot

# Variable values for number of threads
NUM_PROCESSES = 1 2 4 8 16 32 64 128 256 512 10224 2048

all: $(EXEC)

$(EXEC): $(SRC)
	$(CC) $(CFLAGS) -o $(EXEC) $(SRC)

run:
	@$(foreach PROCESSES, $(NUM_PROCESSES), \
		echo Running with NUM_PROCESSES=$(PROCESSES); \
		mpirun -np $(PROCESSES) -hostfile machinefile.txt ./$(EXEC); \
	)

clean:
	rm -f $(EXEC)

.PHONY: all run clean
