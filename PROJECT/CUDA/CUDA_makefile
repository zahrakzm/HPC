# Compiler
CC = nvc++

# Compiler flags
CFLAGS = -g -O3

# Source file
SRC = CUDA_Mandelbrot_2D.cu

# Executable name
EXEC = CUDA_mandelbrot_2D

# Variable values for number of threads
NUM_THREADS = 1 2 4 8 16 32 64 128 256 512 1024

all: $(EXEC)

$(EXEC): $(SRC)
	$(CC) $(CFLAGS) -o $(EXEC) $(SRC)

run:
	@$(foreach THREAD, $(NUM_THREADS), \
		echo Running with NUM_THREADS=$(THREAD); \
		./$(EXEC) $(THREAD); \
	)

clean:
	rm -f $(EXEC)

.PHONY: all run clean
